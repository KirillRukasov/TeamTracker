@model TeamTracker.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Delete Department</h1>

<h3>Are you sure you want to delete this department?</h3>

<div>
    <h4>@Model.Name</h4>
    <form asp-controller="Department" asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.DepartmentID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>