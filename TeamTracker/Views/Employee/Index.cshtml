@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<div style="height: 500px; overflow-y: auto;">
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Programming Language</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.Age</td>
                <td>@employee.Gender</td>
                <td>@employee.DepartmentName</td>
                <td>@employee.ProgrammingLanguageName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-secondary">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>